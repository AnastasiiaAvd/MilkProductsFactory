@model System.Collections.Generic.List<Milk.DataModels.UnitDto>

@{
    ViewBag.Title = "Единицы измерения";
    var errorMessage = "";
    if (TempData.ContainsKey("ErrorMessage"))
    {
        errorMessage = TempData["ErrorMessage"] as string;
    }
}

<h2>Единицы измерения</h2>

<table class="table table-striped table-info table-bordered">
    <thead>
        <tr>
            <th class="text-center" scope="col">Id</th>
            <th class="text-center" scope="col">Наименование</th>
            <th class="text-center" scope="col">Операция</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var unit in Model)
        {
            <tr>
                <td class="text-center">@unit.UnitId</td>
                <td class="text-center">@unit.UnitName</td>
                <td class="text-center">
                    <a href="@Url.Action("Remove", "Unit", new {unitId = unit.UnitId })">
                        <i class="fa fa-times" aria-hidden="true" data-toggle="tooltip" data-placement="right" title="Удалить единицу измерения"></i>
                    </a>
                    <a class="m-l" href="@Url.Action("Edit", "Unit", new {unitId = unit.UnitId})">
                        <i class="fa fa-edit" aria-hidden="true" data-toggle="tooltip" data-placement="right" title="Редактировать единицу измерения"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<button type="button" class="btn btn-outline-primary">
    <a href="@Url.Action("Add", "Unit")">
        Добавить единицу измерения
    </a>
</button>

<script type="text/javascript">

    var errorMessage = '@errorMessage';

    document.addEventListener("DOMContentLoaded", function (event) {

        if (errorMessage != undefined && errorMessage != null && errorMessage.length >0)
            $.gritter.add({
                title: 'Предупреждение!',
                text: errorMessage
            });
    });

</script>