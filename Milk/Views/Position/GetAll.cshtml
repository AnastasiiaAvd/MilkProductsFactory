@model System.Collections.Generic.List<Milk.DataModels.PossitionDto>

@{
    ViewBag.Title = "Должности";

    var errorMessage = "";
    if (TempData.ContainsKey("ErrorMessage"))
    {
        errorMessage = TempData["ErrorMessage"] as string;
    }
}


<h2>Должности</h2>


<table class="table table-striped table-info table-bordered">
    <thead>
        <tr>
            <th class="text-center" scope="col">Id</th>
            <th class="text-center" scope="col">Имя</th>
            <th class="text-center" scope="col">Операции</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var possition in Model)
        {
            <tr>
                <td class="text-center">@possition.PositionId</td>
                <td class="text-center">@possition.PosotionName</td>
                <td class="text-center">
                    <a href="@Url.Action("Remove", "Position", new {positionId = possition.PositionId})">
                        <i class="fa fa-times" aria-hidden="true" data-toggle="tooltip" data-placement="right" title="Удалить должность"></i>
                    </a>
                    <a class="m-l" href="@Url.Action("Edit", "Position", new {positionId = possition.PositionId})">
                        <i class="fa fa-edit" aria-hidden="true" data-toggle="tooltip" data-placement="right" title="Редактировать должность"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<button type="button" class="btn btn-light btn-outline-info">
    
    <a href="@Url.Action("Add", "Position")">
        <i class="fa fa-plus" aria-hidden="true"></i>
        Добавить должность
    </a>
</button>

<script type="text/javascript">

    var errorMessage = '@errorMessage';

    document.addEventListener("DOMContentLoaded", function (event) {

        if (errorMessage != undefined && errorMessage != null && errorMessage.length >0)
            $.gritter.add({
                title: 'Предупреждение!',
                text: errorMessage
            });
    });

</script>
