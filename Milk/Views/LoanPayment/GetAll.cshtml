@model System.Collections.Generic.List<Milk.DataModels.LoanPaymentDto>

@{
    ViewBag.Title = "loan";
}

<h2>Выплаты по кредитам</h2>

<table class="table table-striped table-info table-bordered">
    <thead>
        <tr>
            <th class="text-center" scope="col">Id Кредита</th>
            <th class="text-center" scope="col">Номер выплаты</th>
            <th class="text-center" scope="col">Сумма выплаты</th>
            <th class="text-center" scope="col">Сумма процента выплаты</th>
            <th class="text-center" scope="col">Общая сумма</th>
            <th class="text-center" scope="col">Осталось оплатить</th>
            <th class="text-center" scope="col">Требуемая дата выплаты</th>
            <th class="text-center" scope="col">Дата выплаты</th>
            <th class="text-center" scope="col">Просрочено на(дней)</th>
            <th class="text-center" scope="col">Пеня</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loan in Model)
        {
        <tr>
            <td class="text-center">@loan.CreditId</td>
            <td class="text-center">@loan.PayoutNumber</td>
            <td class="text-center">@loan.AmountPaymentCredit</td>
            <td class="text-center">@loan.AmountPaymentProcent</td>
            <td class="text-center">@loan.AmountTotal</td>
            <td class="text-center">@loan.LoanBalance</td>
            <td class="text-center">@loan.RequiredDate</td>
            <td class="text-center">@loan.ActualDate</td>
            <td class="text-center">@loan.DelayedBy</td>
            <td class="text-center">@loan.Penalty</td>
        </tr>
        }
    </tbody>
</table>

<button type="button" class="btn btn-light btn-outline-info">
    <a href="@Url.Action("AddLoanPayment", "LoanPayment")">
        <i class="fa fa-money" aria-hidden="true"></i>
        Вылатить за кредит
    </a>
</button>

<button type="button" class="btn btn-light btn-outline-info">

    <a href="@Url.Action("Report", "LoanPayment")">
        <i class="fa fa-print" aria-hidden="true"></i>
        Просмотреть отчет
    </a>
</button>

